::-webkit-scrollbar{display:none;}
.container{
    background-color:#F2f2f2;
    height: 100%;
}
.address-box{
    width: 100%;
    background: url(http://static.klpfood.com/arrow-right.png) no-repeat 705rpx center ,
                url(http://static.klpfood.com/addr-line.png) no-repeat center bottom;
    background-size: 16rpx auto,750rpx auto;
    background-color: #fff;
    margin: 20rpx 0; 
}
.add-addres{
    width: 100%;
}
.add-address .title{
    font-size: 28rpx;
    color: #000;
    margin-left: 30rpx;
    background: url(http://static.klpfood.com/118.png) no-repeat left center;
    background-size: 60rpx auto;
    padding: 40rpx 0 40rpx 90rpx; 
}
.show-address{
    width: 664rpx;
    box-sizing: border-box;
    padding-left: 100rpx;
    background: url(http://static.klpfood.com/118.png) no-repeat left center;
    background-size: 64rpx auto;
    margin-left: 20rpx;
}
.show-address .name-tel{
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 20rpx 0;
}
.show-address .addr-text{
    font-size: 24rpx;
    color: #888;
    padding-bottom: 34rpx;
    line-height: 36rpx;
}
form{
    width: 100%;
}
.goods-list{
    width:100%;
    background-color: #fff;
}
.goods-list .list-title{
    font-size: 28rpx;
    color: #000;
    padding: 20rpx 0 20rpx 20rpx;
    display:flex;
    display:-webkit-flex;
}
.goods-list  .a-goods{
    width: 720rpx;
    margin-left: 20rpx;
    display: flex;
    /*justify-content: space-between;*/
    border-top: 1px solid #eee;
    padding: 20rpx 20rpx 20rpx 0;
}
.goods-list  .a-goods .img-box{
    width: 160rpx;
    height:160rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.goods-list .img-box .img{
    width: 160rpx;
    height:160rpx;
}
.goods-list  .a-goods .text-box{
    width: 532rpx;
    box-sizing: border-box;
    padding-top: 10rpx;
}
.a-goods .text-box .arow{
    display: flex;
    justify-content: space-between;
    align-items: center;
 }
.a-goods .text-box .arow .goods-name{
     width: 360rpx;
     font-size:28rpx;
     height: 74rpx;
     color:#000000;
     line-height: 1.6;
     overflow: hidden;
 }
.a-goods .text-box .arow01{
    margin-bottom: 30rpx;
}
.a-goods .text-box .arow .goods-price{
    font-size:26rpx;
    color:#000000;
    align-self: flex-start;
}
.a-goods .text-box .arow .goods-label{
    font-size: 26rpx;
    color: #999;
}
.a-goods .text-box .arow .goods-num{
    font-size: 26rpx;
    color: #999;
}
.peisong-way{
    width: 100%;
    background-color: #fff;
}
.peisong-way .row-box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx 20rpx 0rpx 20rpx;
    border-bottom: 1rpx solid #eee;
    overflow: hidden
}
.peisong-way .row-label{
    font-size: 28rpx;
    color: #000;
     overflow: hidden;
}
.peisong-way .right-text{
    font-size: 28rpx;
    color: #666;
     overflow: hidden;
     width: 80%;
}
.peisong-way .liuyan{
    width: 100%;
    font-size: 28rpx;
    

}
.place-holder{
  text-align:right;
}
.goods-info{
    width: 100%;
    background-color: #fff;
}
.goods-info .row-box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx 20rpx 20rpx 20rpx;
    font-size: 28rpx;
    color: #000;
    overflow: hidden;
}
.goods-info .row-box .right-text{
    text-align: right;
}
.jiesuan-box{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 90rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top:1px solid #eee; 
    background-color: #fff;
    z-index: 10000;
}

.jiesuan-box .to-pay-btn{
    width:250rpx;
    text-align: center;
    height: 100%;
    line-height: 90rpx;
    background-color:#d03e3f;
    font-size:32rpx;
    color:#ffffff;
    z-index: 10000;
     border-radius:0; 
}

.jiesuan-box  .left-price{
    display: flex;
    width: 500rpx;
    justify-content:center;
    line-height: 90rpx;
    padding: 0 30rpx 0 0;
    font-size:28rpx;
    box-sizing: border-box;
}

.jiesuan-box .total{
    color: #e64340;
    text-align: right;
}
