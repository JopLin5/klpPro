<view class="parent">
  <view class="view-order">
    <view class="view-orderstatus">
      <image src="/images/oorder.png"></image>
      <view class="view-orderstatus-info">
        <view class="text-order">订单状态:{{result.order_status_desc}}</view>
        <view class="text-order">订单号:<text selectable="{{true}}">{{result.order_id}}</text></view>
        <view class="text-order">下单时间:<my-date time="{{result.add_time}}"></my-date></view>
        <view class="text-order">支付时间:<my-date time="{{result.pay_time}}"></my-date></view>
        <view class="text-order">发货时间:<my-date time="{{result.shipping_time}}"></my-date></view>
      </view>
    </view>
  </view>

  <view class="view-address" style="background:white">
    <view class="view-addressleft">
      <image src="/images/icon_address.png"></image>
      <view class="view-addressleft-info">
        <text class="text-user">收货人:{{result.consignee}}</text>
        <text class="text-user">收货地址:{{result.address}}</text>
        <text class="text-user">联系方式:{{result.mobile}}</text>
      </view>
    </view>
  </view>
  <view class="view-address" style="background:white">
    <view class="view-addressleft">
      <image src="/images/wl.png"></image>
      <view class="view-addressleft-info" >
        <text class="text-invoice_no" bindtap='seeKuaidi' data-id='{{result.order_id}}'  data-no='{{result.invoice_no}}' style='color:#388bff;'>快递单号:{{result.invoice_no?result.invoice_no+' 复制':'暂无'}}</text>
        <text class="text-shipping_name">物流公司:{{result.shipping_name}}</text>
      </view>
    </view>
  </view>
  <view class='shop_info'>
  <navigator class="view-title" url="/pages/shopdetail/index?id={{result.store.store_id}}">
    <image src="/images/icon_order.png"></image>
    <text>{{result.store.store_name}}</text>
     </navigator>
     <view class='kfinfo' bindtap='gotokefu'>
   <image class='kf' mode='aspectFit' src='/images/tab_icon_customer_service@3x1.png'></image>
   <text>客服</text>
   </view>
   </view>
  <view class="class-line"></view>
  
   <view wx:for="{{result.goods_list}}" wx:for-item="mapping" wx:key="" class="carts-item {{index==0?'first':''}}" bindtap="details" data-id="{{item.order_id}}">
    <view>
      <!-- 缩略图 -->
      <image class="carts-image" src="{{mapping.image}}" mode="aspectFill" />
    </view>
    <view class="carts-text">
      <!-- 商品标题 -->
      <text class="carts-title">{{mapping.goods_name}}</text>
      <view class="carts-subtitle">
        <!-- 价格 -->
        <text>{{mapping.spec_key_name}}</text>
      </view>
    </view>
    <view class="carts-right">
      <text class="carts-price">￥{{mapping.goods_price}}</text>
      <text class="carts-num">x{{mapping.goods_num}}</text>
    </view>
  </view>
  
  <view class="class-line"></view>
  <view class="view-price">
    <view class="view-price1">
      <text class="text-price1">小计:</text>
      <text class="text-red">￥{{result.goods_price}}</text>
    </view>
    <view class="view-price1">
      <text class="text-price1">实付款:</text>
      <text class="com" >￥{{result.order_amount}}</text>
    </view>
       <view class="view-price1">
      <text class="text-price1">买家留言:</text>
      <text class="liuyan" >￥{{result.user_note}}</text>
    </view>
  </view>
</view>