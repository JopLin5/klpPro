/*page background*/
page {
	background: #eee;
}
.address_op{
display: flex;

}

/*that means a record*/
.item {
	margin-bottom: 20rpx;
	background: #fff;
	padding: 10rpx 20rpx 10rpx 20rpx;
}
/*姓名与手机号码*/
.item .header {
	font-size: 30rpx;
	color: #333;
	line-height: 72rpx;
	display: flex;
	flex-direction: column;
}
.border-right {
border-right:1px solid #fff;

}
.border-left {
border-left:1px solid #fff;

}
.item .header text {
	margin-left: 0;
	
}

.item .summary {
	color: #999;
	font-size: 29rpx;
	line-height: 50rpx;
}

.item .footer {
	border-top: 1px solid #ccc;
	font-size: 30rpx;
	color: #999;
	padding-left: 10rpx;
	padding-top: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

/*设为默认地址*/
.set-default {
	display: flex;
	align-items: center;
}

.set-default text {
	font-size: 27rpx;
	margin-left: 6rpx;
}

/*编辑与删除操作*/
.item .footer .operation {
	width: 280rpx;
	display: flex;
}

.item .footer .operation .container {
	display: flex;
	align-items: center;
}

.item .footer .operation .container image {
	width: 60rpx;
	height: 60rpx;
}

.item .footer .operation .container text {
	margin-left: 6rpx;
	font-size: 27rpx;
}

/*地址列表包装容器*/
.address-list {
	margin-bottom: 56px;
}

/*添加地址按钮*/
.address-left {
	position: fixed;
	bottom: 0;
  height: 90rpx;
	width: 50%;
	color: #ffffff;
	background: #de7c21;
   border-radius:0;
}
/*添加地址按钮*/
.address-right {
  height: 90rpx;
  margin-left:50%;
	position: fixed;
	bottom: 0;
	width: 50%;
	color: #ffffff;
	background: #de7c21;
 border-radius:0; 
}