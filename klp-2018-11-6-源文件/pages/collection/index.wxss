@import "../../goods_list.wxss";

.header {
  top: 0;
  background: #fff;
  display: block;
  height: 68rpx;
  position: fixed;
  z-index: 1000;
  width: 100%;
  border-bottom: 2rpx solid #eee;
}

navigator {
  height: none;
  width: none;
}

.view-empty {
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.view-empty image {
  width: 169rpx;
  height: 215rpx;
}

.hint {
  padding-top: 3rpx;
  font-size: 32rpx;
  color: #999;
}


.logo {
  border-radius: 50%;
}

.mp {
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
  height: 100%;
}

 .scroll-view_H {
  display: flex;
  color: #fff;
  height: 200rpx;
  border-bottom: 1rpx solid #ddd;
}


 .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.333333333333333333%;
  text-align: center;
}

 .names {
  font-size: 21rpx;
  color: #333;
  line-height: 21rpx;
  height: 46rpx;
  font-weight: bold;
}

 .names1 {
  font-size: 21rpx;
  color: #333;
  line-height: 21rpx;
  height: 46rpx;
}

 .avantar {
  width: 80rpx;
  height: 80rpx;
}

 .flicon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

 .flicon1 {
  width: 110rpx;
  height: 110rpx;
}

.main_color {
  color: #de7c21;
}

 .navv {
  position: relative;
  width: 375rpx;
  height: 615rpx;
  float: left;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  border-right: 2rpx solid #4c3929;
  border-bottom: 2rpx solid #4c3929;
  background-color: #4c3929;
  z-index: 100;
  border-radius: 10rpx;
}

 .navv:nth-of-type(odd) {
  border-left: 2rpx solid #4c3929;
}

 .default {
  height: 340rpx;
  overflow: hidden;
}

 .img {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
}

 .name {
  width: 100%;
  padding-left: 10rpx;
  vertical-align: center;
  line-height: 30rpx;
}

 .txt {
  display: table;
  width: 100%;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

 .name .tt {
  display: inline-block;
  background-color: red;
  color: #fff800;
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 5rpx;
  padding: 5rpx;
  font-weight: bold;
}

 .gray {
  display: table-cell;
  font-size: 26rpx;
  color: #fff;
}

 .price {
  display: table-cell;
}

.center {
  width: 100%;
  text-align: center;
  margin-top: 44%;
}



.vertical_line {
  display: inline-block;
  width: 2rpx;
  line-height: 10rpx;
  background-color: #de7c21;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.border-right {
  border-right: 1px solid #fff;
}

.header view {
  display: inline-block;
  width: 50%;
  height: 68rpx;
  line-height: 63rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.header view.cur {
  border-bottom: 8rpx solid #de7c21;
  color: #de7c21;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

.tab-content {
  margin-top: 68rpx;
}

.dhr {
  bottom: 135rpx;
  left: 0;
}

.dhf {
  bottom: 135rpx;
  right: 0;
}

.arrow {
  width: 20rpx;
  height: 35rpx;
  background-size: 100% 100%;
  margin-top: 10rpx;
}

.myicon {
  width: 30rpx;
  height: 35rpx;
  background-size: 100% 100%;
  margin-top: 10rpx;
}

.info {
  position: absolute;
  bottom: -1rpx;
  height: 147rpx;
  width: 100%;
}

.cartlogo {
  width: 37rpx;
  height: 37rpx;
  border-radius: 50%;
  border: 1rpx solid white;
  vertical-align: bottom;
}

.logo {
  display: inline-block;
  width: 37.5rpx;
  height: 37.5rpx;
  border-radius: 50%;
  border: 1rpx solid white;
  vertical-align: text-bottom;
}

.shop {
  display: inline-block;
  margin-top: 10rpx;
  line-height: 42rpx;
  margin-left: 10rpx;
  width: 100%;
}

.shopname {
  display: inline-block;
  color: white;
  margin-left: 5rpx;
  vertical-align: text-bottom;
  font-size: 28rpx;
  font-weight: bold;
}

.price_text {
  color: white;
  line-height: 30rpx;
  background-color: red;
  font-size: 30rpx;
  border-radius: 5rpx;
  display: inline-block;
  padding: 5rpx;
}

