.view-title{
    height: 100rpx;
    display: flex;
    flex-direction: row;
    padding-left: 40rpx;
    align-items: center;
}

.view-title image{
    width: 56rpx;
    height: 56rpx;
}

.view-title text{
    font-size: 34rpx;
    margin-left: 26rpx;
    color: #9ebf6b;
}

.class-line1{
	width: 750rpx;
    
	height: 2rpx;
	background: #F4F4F4;
}

.view-orderinfo{
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    align-items: flex-start;
}

.view-orderinfo text{
    font-size: 28rpx;
    margin-top: 36rpx;
    color: dimgray;
    width:100%;

}

.view-orderinfo button{
    margin-top: 40rpx;
    width: 700rpx;
}
.content{  
  display: flex;  
  justify-content: space-around;  
  align-items: center;
  height: 120rpx;
}  
.iptbox{  
  width: 80rpx;  
  height: 80rpx;  
  border:1rpx solid #ddd;  
  border-radius: 20rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  text-align: center;  
}  
.ipt{  
  width: 1px;  
  height: 1px;  
}  
.btn-area{  
  width: 80%;  
  background-color: green;  
  color:white;
} 
