/*商品加减按钮*/

/*stepper容器*/

.stepper {
  border: 1px solid #ccc;
  border-radius: 3px;
  width: 80px;
  height: 26px;
  margin: 0 auto;
}

/*加号与减号*/

.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  color: black;
  float: left;
  margin: 0 auto;
  width: 40px;
  height: 26px;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

