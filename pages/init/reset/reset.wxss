.content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
}

.phone {
  height: 40rpx;
}

.iptbox {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.ipt {
  width: 1px;
  height: 1px;
}

.btn-area {
  width: 41%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  margin-left: 10rpx;
}

.btn-ad {
  width: 100%;
  background-color: #d03e3f;
  font-size: 23rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  padding: 0;
}

input {
  min-height: 0;
}

.input {
  display: block;
  width: 100%;
  height: 80rpx;
  border: 1rpx solid lightgray;
  border-radius: 20rpx;
}

.plinput {
  padding-left: 20rpx;
}

.tip {
  font-size: 28rpx;
  margin-left: 90rpx;
  color: #d03e3f;
}
