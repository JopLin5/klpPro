  font-size: 28rpx;
  font-weight: bold;
}

.goods_list_logo {
  display: inline-block;
  width: 37rpx;
  height: 37rpx;
  border: 1rpx solid white;
  vertical-align: bottom;
}

.goods_list_shopname {
  display: inline-block;
  color: white;
  margin-left: 5rpx;
  vertical-align: text-bottom;
  font-size: 28rpx;
  font-weight: bold;
}

.goods_list_liulan {
  display: inline-block;
  position: absolute;
  font-size: 25rpx;
  margin-right: 15rpx;
  color: rgb(22, 22, 22);
  bottom: 0;
  right: 6rpx;
  background: #07752b;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 3rpx;
  padding-bottom: 4rpx;
}

.goods_list_liulan:after {
  content: '';
  display: table;
  clear: both;
}
