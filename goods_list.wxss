  position: absolute;
  bottom: -1rpx;
  height: 95rpx;
  width: 100%;
}

.goods_list_name {
  width: 100%;
  padding-left: 10rpx;
  vertical-align: center;
  line-height: 30rpx;
}

.goods_list_price {
  font-size: 30rpx;
  color: red;
  position: relative;
}

.goods_list_txt {
  display: table;
  width: 100%;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.goods_list_tt {
  background-color: #fffb18;
  color: #000;
  font-size: 14px;
  font-weight: bold;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 8rpx;
  padding-top: 5rpx;
}

.goods_list_shop {
  display: inline-block;
  margin-top: 10rpx;
  line-height: 42rpx;
  margin-left: 10rpx;
  width: 100%;
}

.goods_list_price_text {
  color: #fff;
  background-color: #de7c21;
  font-size: 14px;
